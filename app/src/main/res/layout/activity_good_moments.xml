<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smileback"
    tools:context=".goodMoments">


    <TextView
        android:id="@+id/goodtext"
        android:layout_width="230dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="156dp"
        android:fontFamily="casual"
        android:text="It's Glad to hear... "
        android:textColor="@color/softPinkLight"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/goodMessage"
        android:layout_width="344dp"
        android:layout_height="187dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="180dp"
        android:fontFamily="casual"
        android:text="Let's Enjoy the Day"
        android:textAlignment="center"
        android:textColor="@color/pinkDark"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goodtext"
        app:layout_constraintVertical_bias="0.101"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/justrelax"
    tools:context=".JustRelax">

    <TextView
        android:id="@+id/relaxText"
        android:layout_width="247dp"
        android:layout_height="132dp"
        android:layout_marginTop="104dp"
        android:lineSpacingExtra="8dp"
        android:text="It's okay to not be okay sometimes"
        android:textAlignment="center"
        android:textColor="@color/softBlueDark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/smileText"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginTop="400dp"
        android:text="Just smile..."
        android:textAlignment="center"
        android:textColor="@color/softBlueDarker"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/relaxText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="77dp"
        android:layout_marginTop="52dp"
        android:text="I'm here to support you."
        android:textAlignment="center"
        android:textColor="@color/softBlueDark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smileText" />
</androidx.constraintlayout.widget.ConstraintLayout>
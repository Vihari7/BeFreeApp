<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smileback"
    tools:context=".JustRelax">

    <TextView
        android:id="@+id/tvRelax"
        android:layout_width="247dp"
        android:layout_height="132dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/istok_web_bold_italic"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8dp"
        android:text="It's okay to not be okay sometimes"
        android:textAlignment="center"
        android:textColor="@color/softPinkLight"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSmile"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginTop="316dp"
        android:fontFamily="@font/istok_web_bold_italic"
        android:text="Just smile..."
        android:textAlignment="center"
        android:textColor="@color/pinkDarker"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRelax" />

    <TextView
        android:id="@+id/tvSupport"
        android:layout_width="294dp"
        android:layout_height="100dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/istok_web_bold_italic"
        android:text="I'm here to support you."
        android:textAlignment="center"
        android:textColor="@color/softPink"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSmile" />
</androidx.constraintlayout.widget.ConstraintLayout>